= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg
  = text_field_tag 'fname', @customer.fname, :placeholder => "First Name", :class => "first-name"
  = text_field_tag 'lname', @customer.lname, :placeholder => "Last Name", :class => "last-name"
  = text_field_tag 'dob', @customer.dob.strftime("%m-%d-%Y"), :placeholder => "DOB ex: MM-DD-YYYY", :class => "dob"
  = text_field_tag 'age', Customer.age(@customer.dob), :readonly => "true", :placeholder => "Age", :class => "age"
  .actions
    = f.submit 'Save'
